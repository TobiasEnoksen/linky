<%= form_with(model: link, local: true) do |form| %>
  <% if link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <h4>Write in the display text (facebook):</h4>
    <%= form.text_field :text, placeholder: "Facebook", class: "form-control input-lg"%>
  </div>

  <div class="form-group">
    <h4> write in full url (http://www.Facebook.com)</h4>
    <%= form.text_field :url, placeholder: "http://www.Facebook.com", class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <%= form.submit'Post New Link', class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
